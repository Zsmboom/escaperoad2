{
  "headers": [
    {
      "source": "/(.*).xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Content-Disposition",
          "value": "attachment; filename=sitemap.xml"
        },
        {
          "key": "Cache-Control",
          "value": "no-transform"
        }
      ]
    }
  ]
} 